&nbsp; &nbsp; &nbsp; i++;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<br />&nbsp; &nbsp;}while (i&lt;SIZE &amp;&amp; !(sdin.fail()));<br />&nbsp; &nbsp;sdin.close(); <br /><br />&nbsp; &nbsp;//compare name to class list (see if its there)<br />&nbsp; &nbsp;for(int x=0; x &lt; i; x++)<br />&nbsp; &nbsp;{<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; if(strcmp(CHECK[x].name, Name)!=0)<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; {<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; return 1; //duplicate found<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; } <br />&nbsp; &nbsp;}&nbsp; &nbsp;<br /><br />&nbsp; return 0;<br /><br />}<br /><br />void clearTag(char one&#91;]){<br />&nbsp; //clear the array by filling with null - ASCII 0<br />&nbsp; for(int i = 0; i &lt; strlen(one); i++){<br />&nbsp; &nbsp; &nbsp; one[i] = 0;<br />&nbsp; &nbsp; &nbsp; <br />&nbsp; }<br />}<br /><br />void resetReader(){<br />&nbsp; //Reset RFID reader to read again.&nbsp; <br />&nbsp; digitalWrite(RFIDResetPin, LOW);<br />&nbsp; digitalWrite(RFIDResetPin, HIGH);<br />&nbsp; delay(150);<br />}</div></div>
