	<span style="color:#3311cc;">global</span> <span style="color: #0000ff;">$wgOut</span>;
	<span style="color: #0000ff;">$wgOut</span>-&gt;<span style="color: #006600;">addScript</span><span style="color:#008000;">&#40;</span>
