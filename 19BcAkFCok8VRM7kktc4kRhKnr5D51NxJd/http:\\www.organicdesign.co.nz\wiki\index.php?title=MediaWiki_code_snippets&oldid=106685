	<span style="font-style:italic;color:#d00000;">// Get all category pages</span>
	<span style="color: #0000ff;">$dbr</span>   = &amp;wfGetDB<span style="color:#008000;">&#40;</span>DB_SLAVE<span style="color:#008000;">&#41;</span>;
