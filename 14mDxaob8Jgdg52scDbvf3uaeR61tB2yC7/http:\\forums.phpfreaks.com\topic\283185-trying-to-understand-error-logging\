<script type="text/javascript">
var pid = parseInt(1455043);
if ( pid > ipb.topic.topPid ){
	ipb.topic.topPid = pid;
}

	// Show multiquote for JS browsers
	if ( $('multiq_1455043') )
	{
		$('multiq_1455043').show();
	}
	
	if( $('toggle_post_1455043') )
	{
		$('toggle_post_1455043').show();
	}
	
