namespace A{
class Foo{
	 public function bar(){
		 echo &#34;foo bar&#34;;
	 }
}
}

namespace B{
use \A;
&#036;a = new Foo();
&#036;a-&#62;bar();
// This results in a fatal error&#33;
}
Instead, you..." />
		
		
	

		
		
